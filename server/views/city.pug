extends layout

block layout-content
    div.View
        h1.Banner CITY-DB
        div
            br
        div.NavButtons
            a(href="/user")
                div.NavButton Menu
            a(href="/panel")
                div.NavButton Query
            a(href="/logout")
                div.NavButton Log out
        div
            br
        div.Message.center
            h1= 'Database - Table View'
            table
              tr
                td ID
                td City
                td Country
                td Population
              for city in cityList
                  tr
                      td= city.id
                      td
                          a(href='/city/' + city.id) #{city.name}
                      td= city.country
                      td= city.population
